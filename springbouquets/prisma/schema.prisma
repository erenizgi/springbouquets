generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  isAdmin   Boolean  @default(false)
  cart      Json     @default("{}")
  createdAt DateTime @default(now())
}

model Bouquet {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  price       Float?
  image String?
  description String?
  createdAt   DateTime @default(now())
}
